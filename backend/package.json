{
  "name": "wecravery-backend",
  "version": "1.0.0",
  "description": "Cloudflare Worker backend for Wecravery photo marketplace",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:prod": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "tail:dev": "wrangler tail --env development",
    "tail:staging": "wrangler tail --env staging",
    "tail:prod": "wrangler tail --env production",
    "secrets:list": "wrangler secret list",
    "secrets:delete": "wrangler secret delete",
    "r2:list": "wrangler r2 bucket list",
    "r2:create:dev": "wrangler r2 bucket create wecravery-photos-dev",
    "r2:create:staging": "wrangler r2 bucket create wecravery-photos-staging",
    "r2:create:prod": "wrangler r2 bucket create wecravery-photos-prod",
    "r2:create:all": "npm run r2:create:dev && npm run r2:create:staging && npm run r2:create:prod",
    "test": "echo \"No tests specified\" && exit 0",
    "clean": "rm -rf node_modules package-lock.json",
    "fresh-install": "npm run clean && npm install"
  },
  "keywords": [
    "cloudflare",
    "worker",
    "photo",
    "marketplace",
    "firebase",
    "r2",
    "wecravery"
  ],
  "author": "Wecravery Team",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "wrangler": "^4.31.0",
    "@cloudflare/workers-types": "^4.20241011.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wecravery/wecravery"
  }
}